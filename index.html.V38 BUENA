    const esMovil = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);

    if (esMovil) {
        function manejarEstadoModal(abriendo) {
            if (abriendo) {
                history.pushState({ modalAbierto: true }, "");
            }
        }

        window.onpopstate = function(event) {
            const modalServicios = document.getElementById('modal-global');
            const modalLegal = document.getElementById('modal-legal');

            if (modalServicios && !modalServicios.classList.contains('hidden')) {
                closeModal();
            } else if (modalLegal && !modalLegal.classList.contains('hidden')) {
                cerrarLegal();
            }
        };

        const originalOpenModal = window.openModal;
        window.openModal = function(k) {
            manejarEstadoModal(true);
            originalOpenModal(k);
        };

    }
})();
