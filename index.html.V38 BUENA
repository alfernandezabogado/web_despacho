       // --- FUNCIONES DEL MODAL ---
        function openModal(k) {
            const s = servicios[k];
            if (!s) return;

            document.getElementById('modal-title').innerText = s.t;
            document.getElementById('modal-desc').innerText = s.d;
            
            const modalImg = document.getElementById('modal-img');
            if (modalImg) {
                modalImg.style.backgroundImage = `url('${s.img}')`;
                modalImg.setAttribute('aria-label', s.alt);
            }
            
            document.getElementById('modal-especialidad-val').value = s.t;
            document.getElementById('modal-list').innerHTML = s.p.map(x => 
                `<li class="flex items-center gap-2"><i class="fa-solid fa-check text-blue-600 text-[10px]"></i>${x}</li>`
            ).join('');
            
            const m = document.getElementById('modal-global');
            m.classList.remove('hidden');
            m.style.display = 'flex';
            
            setTimeout(() => { 
                m.classList.add('opacity-100'); 
                m.firstElementChild.classList.remove('scale-95'); 
            }, 10);
            
            document.body.style.overflow = 'hidden';

            const video = document.getElementById('contenedor-video-final');
            if (video) video.style.display = 'none';
        }

        function closeModal() {
            const m = document.getElementById('modal-global');
            m.classList.remove('opacity-100');
            m.firstElementChild.classList.add('scale-95');
            
            setTimeout(() => { 
                m.classList.add('hidden'); 
                m.style.display = 'none';
                document.body.style.overflow = 'auto';
            }, 300);

            const video = document.getElementById('contenedor-video-final');
            if (video) video.style.display = 'block';
        }

        // --- FUNCI√ìN PARA EL MODAL LEGAL ---
        function cerrarLegal() {
            document.getElementById('modal-legal').classList.add('hidden');
        }

        // --- L√ìGICA DE ENV√çO INTEGRADA ---
        async function enviarFormulario(event, formId) {
            event.preventDefault();
            const form = document.getElementById(formId);
            const btn = form.querySelector('button[type="submit"]');
            const nombre = form.querySelector('[name="nombre"]').value;
            const checkUrgente = form.querySelector('#check_urgente_modal, #check_urgente_general');
            const esUrgente = checkUrgente ? checkUrgente.checked : false;

            if (esUrgente) {
                const urlWa = `https://wa.me/34658421467?text=${encodeURIComponent('‚ö†Ô∏è CONSULTA URGENTE DE: ' + nombre)}`;
                window.open(urlWa, '_blank');
            }

            const URL_SCRIPT = "https://script.google.com/macros/s/AKfycbzuF_gkCQ2F25FGzC13CTLqH5G855_lV6DWk72N4oOjQAZHiy9i-S52Xf751RW-csLc8g/exec";
            const textoOriginalBtn = btn.innerText;
            btn.innerText = "ENVIANDO...";
            btn.disabled = true;

            try {
                const formData = new FormData(form);
                if (esUrgente) {
                    const msjOriginal = formData.get('mensaje');
                    formData.set('mensaje', "‚ö†Ô∏è [PRIORIDAD URGENTE] ‚ö†Ô∏è\n\n" + msjOriginal);
                }
                await fetch(URL_SCRIPT, { method: 'POST', body: formData, mode: 'no-cors' });
                alert('Gracias ' + nombre + '. Su consulta ha sido enviada.');
                form.reset();
                closeModal();
            } catch (error) {
                alert('Hubo un error al enviar.');
            } finally {
                btn.innerText = textoOriginalBtn;
                btn.disabled = false;
            }
        }

