<!-- JAVASCRIPT DEL M√ìDULO -->
<script>
    // Mostrar banner si no hay consentimiento guardado
    if(!localStorage.getItem('cookiesAccepted')) {
        document.getElementById('cookie-banner').style.display = 'block';
        document.getElementById('cookie-settings-btn').style.display = 'block';
    } else {
        document.getElementById('cookie-settings-btn').style.display = 'block';
    }
    
    // Aceptar todas las cookies
    function acceptCookies() {
        localStorage.setItem('cookiesAccepted', 'true');
        localStorage.setItem('analyticsCookies', 'true');
        document.getElementById('cookie-banner').style.display = 'none';
    }
    
    // Rechazar cookies no esenciales
    function rejectCookies() {
        localStorage.setItem('cookiesAccepted', 'true');
        localStorage.setItem('analyticsCookies', 'false');
        document.getElementById('cookie-banner').style.display = 'none';
    }
    
    // Mostrar modal de preferencias
    function showCookieModal() {
        document.getElementById('cookie-modal').style.display = 'flex';
        const analyticsEnabled = localStorage.getItem('analyticsCookies') === 'true';
        document.getElementById('analytics-cookie').checked = analyticsEnabled;
    }
    
    // Cerrar modal
    function closeCookieModal() {
        document.getElementById('cookie-modal').style.display = 'none';
    }
    
    // Guardar preferencias del modal
    function saveCookiePreferences() {
        const analyticsEnabled = document.getElementById('analytics-cookie').checked;
        localStorage.setItem('cookiesAccepted', 'true');
        localStorage.setItem('analyticsCookies', analyticsEnabled);
        closeCookieModal();
    }
    
    // Cerrar modal al hacer clic fuera
    document.getElementById('cookie-modal').addEventListener('click', function(e) {
        if(e.target === this) {
            closeCookieModal();
        }
    });
</script>
